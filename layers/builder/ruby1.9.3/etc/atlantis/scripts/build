exec | tee /etc/atlantis/scripts/build.log
exec 2>&1

OVERLAY=$1
cp -dR --preserve=mode $OVERLAY/* /

pushd /etc/service
  ln -s /etc/sv/app* .
popd

if [ -d /src/check_mk_checks ]; then
  mv /src/check_mk_checks /
fi
mv /src /app

pushd /app
  /etc/atlantis/scripts/setup
popd

chown -R user1:user1 /app

# check non-empty vendor/cache folder for local gems
if [ -d "/app/vendor/cache" ] && test "$(ls -A "/app/vendor/cache")"; then
  bundle install --local --gemfile /app/Gemfile
else
  bundle install --gemfile /app/Gemfile
fi

echo "done building app"
